<h2> Create an account</h2>

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>

    <%= f.label :image %>
    <%= f.text_field :image  %>
    <br>

    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <br>

    <%= f.label :linkedin %>
    <%= f.text_field :linkedin %>
    <br>

    <%= f.submit 'Sign Up' %>

<% end %>

