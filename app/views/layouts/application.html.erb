<!DOCTYPE html>
<html>
  <head>
    <title>Nomadlist clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <%= cloudinary_js_config %>
  </head>

  <body>
  <h1> <%= link_to 'NomadList!', root_path %></h1>
  <header>
    <nav>
      <div class="navlink">
        <% if @current_user.present?%>
        Hello, <%= @current_user.name %> | <%= link_to 'Logout', login_path, method: 'delete'%>
      </div>

      <% else %>
      <div class="navlink">
        <%= link_to 'Login', login_path %></div>
      </div>
      <div class="navlink">
        <%= link_to 'Sign Up', new_user_path %> 
      </div>
    <% end %>
      <div class="navlink">
        <%= link_to 'NomadList Cities', cities_path %>
      </div>
      <div class="navlink">
        <%= link_to 'Startups', startups_path %>        
      </div>
      <div class="navlink">
        <%= link_to 'Coworking Spaces', coworking_spaces_path %>
      </div>
      <div class="navlink">
        <%= link_to 'Add startup', new_startup_path %>
      </div>
      <div class="navlink">
        <%= link_to 'Add coworking space', new_coworking_space_path %>
      </div>
    </nav>
  </header>
    
    <%= yield %>
  </body>
</html>
