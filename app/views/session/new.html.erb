<h2>Login </h2>

<% if flash[:error] %>
    <!-- print out any error messages from the controller -->
    <br>
    <strong>
        <%= flash[:error] %>
    </strong>
    <br>
    <br>
<% end %>

<!-- we're not interacting with a model object, so we don't use 'form_for @obj  -->
<%= form_tag login_path do %>

    <%= label_tag :email %>
    <%= email_field_tag :email %>
     <br>
    
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag 'Login' %>

<% end%>